@model List<Category>
<partial name="_Notifications"/>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6 ">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new Category</a>
            
        </div>
    </div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model.OrderBy(u=>u.DisplayOrder)){
        <tr>
            <td>
                @x.Name
            </td>
            <td>@x.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-id="@x.CategoryId" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Category" asp-route-id="@x.CategoryId" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>